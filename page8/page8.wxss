/* pages/page8/page8.wxss */
.pageview {
  width: 100%;
  height: 100vh;
  position: relative;
  display: flex;
  flex-direction: row;
}

.tabs {
  width: 16%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  border: 1px solid grey;
}

.tab {
  width: 100%;
  height: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2px dashed grey;
  background-color: white;
}

.tab_on {
  width: 100%;
  height: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2px dashed grey;
  background-color: grey;
}

.content {
  width: 80%;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid grey;
}

.tabview {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tabview_title {
  font-size: x-large;
  margin-bottom: 10px;
}

.tabview_swiper {
  width: 50%;
  height: 25%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2px solid grey;
}

.swiper_item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: large;
  /* border: 2px dashed grey; */
}

.ellipses {
  width: 4%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1px solid grey;
}

.ellipse {
  width: 50%;
  height: 1%;
  margin: 1vh;
  /* border: 1px solid black; */
  border-radius: 100%;
  background-color: rgba(180, 180, 180);
}

.ellipse_on {
  width: 50%;
  height: 1%;
  margin: 1vh;
  /* border: 1px solid black; */
  border-radius: 100%;
  background-color: black;
}

.tab4_button {
  border: 1px solid grey;
}
